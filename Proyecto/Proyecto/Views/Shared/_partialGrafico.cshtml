@using System.Data;
@{
    DataSet currentDataSet = (DataSet)ViewBag.ElDataSet;
}
    <div id="wrapper">
                <div id="page-wrapper">
            <div class="container-fluid">
                <!-- /.row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Area Chart</h3>
                            </div>
                            <div class="panel-body">
                                <div id="morris-area-1"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->

            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/js.js"></script>
    <!-- Morris Charts JavaScript -->
    <script src="~/js/plugins/morris/raphael.min.js"></script>
    <script src="~/js/plugins/morris/morris.min.js"></script>
    <!--
    <script src="js/plugins/morris/morris-data.js"></script>
    -->
    <script>
        $(function() {
            // Area Chart
            Morris.Area({
                element: 'morris-area-1',
                data: [
                    @{for (var i = 0; i < currentDataSet.Tables[0].Rows.Count; i++) {
                        <text>
                            {
                                //{vecLab[i] = "Facturacion Producto " + (i + 1).ToString();}
                                fecha: '@currentDataSet.Tables[0].Rows[i][0]',
                                valor: '@currentDataSet.Tables[0].Rows[i][1]',
                                valor2: '@currentDataSet.Tables[0].Rows[i][2]'
                            }@((i < currentDataSet.Tables[0].Rows.Count) ? "," : "")
                        </text>
                              }
                          }
                ],
                xkey: ['fecha'],
                ykeys: ['valor', 'valor2'],
                labels: ['Producto 1', 'Producto 2', 'Producto 3'],
                pointSize: 4,
                hideHover: 'auto',
                resize: true

            });
        });
    </script>

    